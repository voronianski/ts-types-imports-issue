{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "pretty": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  }
}
